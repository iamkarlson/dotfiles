"don't click middle mouse as left
noremap <MiddleMouse> <LeftMouse>
"ignore case searching
set ic
"use incremental search like sublime
set incsearch

set hlsearch



"set indetations`
set expandtab

set tabstop=4

set softtabstop=4

set shiftwidth=4

set scrolloff=5

set ttimeout
set ttimeoutlen=100

set timeout
set timeoutlen=200


if (has('win32') || has('win64'))
    :source ~\.vim\simple-mapping.vimrc
endif

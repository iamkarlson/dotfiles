"always show status line
set laststatus=2

"don't click middle mouse as left
noremap <MiddleMouse> <LeftMouse>

"always show line numbers
set relativenumber 
set number 
highlight LineNr ctermfg=grey

"ignore case searching
set ic

"use incremental search like sublime
set incsearch

set encoding=utf-8

"enable syntax highlighting
syntax on

"set indetations`
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

set spelllang=ru,en
set spell

set scrolloff=5

set timeoutlen=1000 ttimeoutlen=0

if (has('win32') || has('win64'))
    :source ~\.vim\simple-mapping.vimrc
else
    :source ~/.vim/simple-mapping.vimrc
endif

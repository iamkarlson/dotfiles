mode "nag" {
	bindsym --to-code {
		Ctrl+d mode "default"

		Ctrl+c $nag --exit
		q $nag --exit
		Escape $nag --exit

		Return $nag --confirm

		Tab $nag --select prev
		Shift+Tab $nag --select next


		Left $nag --select prev
		Right $nag --select next

		Up $nag --select prev
		Down $nag --select next

	}
}
